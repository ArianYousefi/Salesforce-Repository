<apex:page standardController="Account" extensions="AY_CreateAccountController">
    <apex:sectionHeader title="Account Edit" subtitle="New Account" rendered="{! IF( acc.Name == null, true, false)}"/>
    <apex:pageMessages id="pageMessages"/>
<apex:form >

    <apex:pageBlock title="Business Account Edit" mode="edit">

        <apex:pageBlockButtons location="top" id="cmndbtn">
            <apex:commandButton action="{!save}" value="Save" disabled="{!If(isValidAddress == true ,false, true)}"/>
            <apex:commandButton action="{!startRequest}" value="Request Service" reRender="responseBlock"/>
            <apex:commandButton action="{!cancel}" value="Cancel"/>
        </apex:pageBlockButtons>

        <apex:pageBlockSection title="Account Information" columns="1">
            <apex:inputField value="{!Account.Name}" label="{!$ObjectType.Account.Fields.Name.Label}" required="false"/>
            <apex:inputField value="{!Account.BillingStreet}" label="{!$ObjectType.Account.Fields.BillingStreet.Label}" required="false"/>
            <apex:inputField value="{!Account.Line_2__c}" label="{!$ObjectType.Account.Fields.Line_2__c.Label}" required="false"/>
            <apex:inputField value="{!Account.BillingCity}" label="{!$ObjectType.Account.Fields.BillingCity.Label}" required="false"/>
            <apex:inputField value="{!Account.BillingState}" label="{!$ObjectType.Account.Fields.BillingState.Label}" required="false"/>
            <apex:inputField value="{!Account.BillingPostalCode}" label="{!$ObjectType.Account.Fields.BillingPostalCode.Label}" required="false"/>
            <apex:inputField value="{!Account.BillingCountry}" label="{!$ObjectType.Account.Fields.BillingCountry.Label}" required="false"/>
        </apex:pageBlockSection>

    </apex:pageBlock>

    <apex:pageBlock title="Response from Webservice" id="responseBlock">
        <pre> {!message} </pre>
    </apex:pageBlock>

</apex:form>
</apex:page>